<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lst.comadep.Dao.UserDao">

    <resultMap id="BaseResultMap" type="com.lst.comadep.Entity.User" >
        <id column="id" property="id" />
        <result column="user_name" property="userName" jdbcType="VARCHAR" />
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="address"  property="address" jdbcType="VARCHAR"/>
        <result column="telephone_number" property="telephoneNumber" jdbcType="INTEGER"/>
        <result column="power_code" property="powerCode" jdbcType="INTEGER"/>
        <result column="sex" property="sex" jdbcType="VARCHAR"/>
        <result column="age" property="age" jdbcType="INTEGER"/>
        <result column="create_time" property="createTime" jdbcType="DATE"/>
    </resultMap>
    <select id="check"  parameterType="map"  resultMap="BaseResultMap">
        select
        password,user_name,id
        from comadep.user
        where user_name=#{userName}
    </select>
    <insert id="register" parameterType="map" >
        insert into comadep.user(user_name,password,address,telephone_number,sex,age,create_time)
        values (#{userName},#{password},#{address},#{telephoneNumber},#{sex},#{age},#{createTime})
    </insert>
    <select id="selectUserById" resultMap="BaseResultMap">
        select user_name,address,telephone,power_code,sex,age,create_time from comadep.user where id=#{id}
    </select>
</mapper>